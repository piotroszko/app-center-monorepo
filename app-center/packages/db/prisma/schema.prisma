generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roles Role[]
  messages Message[]
  channels Channel[]
  files File[]
  directories Directory[]

  ownedChannels Channel[] @relation(name: "owners")
}

model Role {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users User[]
  permissions Permission[]
}

model Permission {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roles Role[]
}

model Settings {
  id        String   @id @default(cuid())
  key       String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Channel {
  id        String   @id @default(cuid())
  type      String  // group, room or private
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]
  users User[]
  owners User[] @relation(name: "owners")
}

model Message {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  userId String
  
  channel Channel @relation(fields: [channelId], references: [id])
  channelId String
}

model Log {
  id        String   @id @default(cuid())
  server    String  // go, nextjs, or module name
  level     String // info, warn, error
  category  String // auth, db, api, etc.
  message   String // log message
  createdAt DateTime @default(now())
}

model File {
  id        String   @id @default(cuid())
  filename  String
  mimetype  String
  format   String
  shareType String // public, private, link ~ default is private
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  User User @relation(fields: [userId], references: [id])
  userId String
  directory Directory @relation(fields: [directoryId], references: [id], onDelete: Cascade)
  directoryId String
}

model Directory {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shareType String // public, private, link ~ default is private

  files File[]
  directories Directory[] @relation("DirectoryToDirectory")
  parent Directory? @relation("DirectoryToDirectory", fields: [parentId], references: [id], onDelete: Cascade)
  parentId String?
  User User @relation(fields: [userId], references: [id])
  userId String
}